# https://github.com/django/django/blob/main/.editorconfig

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[**/admin/js/vendor/**]
indent_style = ignore
indent_size = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[Makefile]
indent_style = tab

[*.{yml, yaml}]
indent_size = 2

[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.sh]
indent_size = 4
